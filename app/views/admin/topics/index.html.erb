<div class="toolbar">
  <ul class="actions">
    <li id="new_topic_link">
      <%= button_link_to t("new_topic"), new_object_url, {:icon => "add"} %>
    </li>
  </ul>
  <br class="clear" />
</div>
<h1><%= t("topics") %></h1>

<div id="new_topic"></div>

<table class="index">
  <tr>
    <th><%= t("name") %></th>
    <th><%= t("email") %></th>
    <th>
    </th>
  </tr>
  <% @topics.each do |topic| %>
  <tr id="<%= dom_id topic %>">
    <%- locals = {:topic => topic} %>
    <td><%= topic.name %></td>
    <td><%= topic.email %></td>
    <td class="actions">
      <%= link_to_edit topic %>
      &nbsp;
      <%= link_to_delete topic %>
    </td>
  </tr>
  <% end %>
</table>